<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/listProductImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/listProductTitle"
        android:layout_width="wrap_content"
        android:text="Nama produk"
        android:textSize="12sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/listProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="Rp. 10.000"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/listProductSellerImage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@color/colorAccent"
            />
        <TextView
            android:id="@+id/listProductSellerName"
            android:layout_toRightOf="@id/listProductSellerImage"
            android:layout_width="wrap_content"
            android:text="si user"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>